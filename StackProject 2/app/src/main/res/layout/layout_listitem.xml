<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/userIV"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/userIV"
        app:layout_constraintBottom_toBottomOf="@id/userIV"
        app:layout_constraintLeft_toLeftOf="@id/userIV"
        app:layout_constraintRight_toRightOf="@id/userIV"
        style="?android:attr/progressBarStyleSmall"/>

    <TextView
        android:id="@+id/userTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/userIV"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="T.J Crowder" />

    <TextView
        android:id="@+id/goldTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        tools:text="Gold - 121"
        app:layout_constraintLeft_toRightOf="@+id/userIV"
        app:layout_constraintTop_toBottomOf="@id/userTV"/>

    <TextView
        android:id="@+id/silverTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        tools:text="Silver - 123"
        app:layout_constraintLeft_toRightOf="@+id/userIV"
        app:layout_constraintTop_toBottomOf="@id/goldTV"/>

    <TextView
        android:id="@+id/bronzeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        tools:text="Bronze - 123"
        app:layout_constraintLeft_toRightOf="@+id/userIV"
        app:layout_constraintTop_toBottomOf="@id/silverTV"/>

</android.support.constraint.ConstraintLayout>